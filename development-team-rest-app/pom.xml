                <activatedProperties>jpa</activatedProperties>
            </properties>
        </profile>

        <profile>
            <id>myBatis</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <activatedProperties>myBatis</activatedProperties>
            </properties>
        </profile>

        <profile>
            <id>jdbc</id>
            <properties>
                <activatedProperties>jdbc</activatedProperties>
            </properties>
