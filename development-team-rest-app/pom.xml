        </profile>

        <profile>
            <id>mySql</id>
            <properties>
                <activatedProperties>mySql</activatedProperties>
            </properties>
        </profile>

        <profile>
            <id>jpa</id>
<!--            <activation>-->
<!--                <activeByDefault>true</activeByDefault>-->
<!--            </activation>-->
